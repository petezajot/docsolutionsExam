<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <EditText
        android:id="@+id/numEmpleado"
        android:layout_height="50sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:hint="Número de empleado"
        android:digits="0123456789"
        android:inputType="number"
        android:imeOptions="actionNext"/>
    <EditText
        android:id="@+id/nombreEmpleado"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:inputType="textCapWords"
        android:layout_below="@+id/numEmpleado"
        android:hint="Nombre completo"
        android:imeOptions="actionNext"/>
    <EditText
        android:id="@+id/fechaNac"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/nombreEmpleado"
        android:hint="Fecha de nacimiento"/>
    <EditText
        android:id="@+id/dirEmpleado"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/fechaNac"
        android:hint="Dirección"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/dirEmpleado"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:text="Continuar"
        android:textAllCaps="false"/>


</RelativeLayout>